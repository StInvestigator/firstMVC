@model RegisterForm
@{
    ViewData["Title"] = "Реєстрація";
}
<h2>Реєстрація</h2>
<form method="post">
    <div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control">
    <span style="color:red">
        @Html.ValidationMessageFor(x => x.Name)
        <br/>
    </span>
    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" class="form-control">
    <span style="color:red">
        @Html.ValidationMessageFor(x => x.Email)
        <br/>
    </span>
    <label asp-for="Password" class="form-label"></label>
    <input asp-for="Password" class="form-control" type="password">
    <span style="color:red">
        @Html.ValidationMessageFor(x => x.Password)
        <br/>
    </span>
    <label asp-for="ConfirmPassword" class="form-label"></label>
    <input asp-for="ConfirmPassword" class="form-control" type="password">
    <span style="color:red">
            @Html.ValidationMessageFor(x => x.ConfirmPassword)
        <br/>
    </span>
    </div>
    <button type="submit" class="btn btn-outline-success">Зареєструватися</button>
    <a asp-area="Auth" asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["returnUrl"]" class="btn btn-outline-primary">В мене вже є аккаунт</a>
</form>